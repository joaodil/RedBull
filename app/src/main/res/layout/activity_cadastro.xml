<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.usuario.redbullteam.CadastroActivity">

    <ImageView
        android:layout_width="200px"
        android:layout_height="200px"
        android:src="@drawable/logo"
        android:layout_gravity="center"
        android:layout_marginTop="20px"
        android:id="@+id/im_logo"/>

    <EditText
        android:id="@+id/et_nome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome" />

    <EditText
        android:layout_width="match_parent"
        android:hint="Apelido"
        android:layout_height="wrap_content"
        android:id="@+id/et_apelido"/>
    <EditText
        android:id="@+id/et_fone"
        android:hint="Telefone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"/>
    <EditText
        android:id="@+id/et_camisa"
        android:hint="Número camisa"
        android:inputType="numberDecimal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/et_posicao"
        android:hint="Posição"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="match_parent"
        android:id="@+id/bt_cadastrar"
        android:text="Cadastrar"
        android:layout_height="wrap_content"
        android:backgroundTint="#030303"
        android:textColor="#fa0307"
        android:layout_marginTop="15dp"/>

</LinearLayout>

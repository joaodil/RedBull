<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fundotime"
    tools:context="com.example.usuario.redbullteam.time">


    <ImageView
        android:layout_width="200px"
        android:layout_height="200px"
        android:src="@drawable/logo"
        android:layout_gravity="center"
        android:layout_marginTop="20px"
        android:id="@+id/im_logo"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_camisa"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="CAMISA"
            android:layout_weight="4"
            android:background="#ffffff"
            android:textColor="#fa0307"
            />

        <TextView
            android:id="@+id/tv_apelido"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="APELIDO"
            android:layout_weight="4"
            android:background="#ffffff"
            android:textColor="#fa0307"
            />

        <TextView
            android:id="@+id/tv_fone"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="TELEFONE"
            android:layout_weight="4"
            android:background="#ffffff"
            android:textColor="#fa0307"
            />

        <TextView
            android:id="@+id/tv_gols"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="GOLS"
            android:layout_weight="4"
            android:background="#ffffff"
            android:textColor="#fa0307"
            />
    </LinearLayout>

    <ListView
        android:id="@+id/lv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Clique no jogar para modificar ou excluir"
        android:layout_marginTop="35dp"
        android:textColor="#ffffff"/>
</LinearLayout>
